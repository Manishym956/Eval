pipeline{
    agent any
    tools{
        maven 'maven'
    }
    stages{
      stage('Build'){
        steps{
            echo 'Building the Project'
            bat 'mvn -B -DskipTests clean package'
        }
      } 
      stage('Test'){
        steps{
            echo 'Testing   the Project'
            bat 'mvn test'
        }
      } 
      stage('Delivery'){
        steps{
            echo 'Delivering the Project'
            bat './scripts/deliver.sh'
        }
      }
    }
}